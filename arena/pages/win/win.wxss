/* pages/win/win.wxss */
@import "../../app.wxss";

.arena-my-grand {
  width: 100%;
  height: 100%;
  padding: 0 68rpx;
  margin-top: 160rpx;
  max-height: 660rpx;
  /* overflow: hidden; */
}

.arena-share {
  margin-left: 24rpx;
}

.arena-bottom-btn button {
  width: 320rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  background: #1adaaf;
}

.arena-btn-record {
  position: relative;
}

.arena-btn-text {
  font-size: 22rpx;
  color: #fff;
  background: #f8cd4b;
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  bottom: 110rpx;
  right: 0;
}

.arena-btn-text::after {
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-style: solid;
  bottom: -7px;
  border-width: 14rpx 14rpx 0 14rpx;
  border-color: #f8cd4b transparent transparent transparent;
  right: 50%;
  margin-right: -40rpx;
}

.arena-footer .arena-btn-text image {
  width: 24rpx;
  height: 24rpx;
  margin: 18rpx 8rpx 0 8rpx;
}

.arena-btn-text view {
  display: inline-block;
  vertical-align: top;
}

.arena-win-box {
  height: 144rpx;
  position: relative;
}

.arena-win-portrait {
  position: relative;
  display: inline-block;
  height: 144rpx;
}

.arena-win-portrait .arena-portrait-img {
  width: 132rpx;
  height: 132rpx;
  border: 6rpx solid #ff7474;
  background-color: #fff;
}

.arena-win-portrait .arena-portrait-guan {
  position: absolute;
  width: 160rpx;
  height: 124rpx;
  top: -130rpx;
  left: -10rpx;
}

.arena-win-info {
  display: inline-block;
  font-size: 24rpx;
  color: #f8cd4b;
  vertical-align: bottom;
  position: absolute;
  bottom: 2rpx;
}

.arena-win-info .arena-win-name {
  color: #fff;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.arena-win-ques {
  width: 240rpx;
  height: 88rpx;
  background: #720a45;
  padding: 4rpx;
  margin-top: 10rpx;
}

.arena-win-ques view {
  line-height: 40rpx;
  padding-left: 20rpx;
}

.arena-dianzan {
  width: 112rpx;
  height: 112rpx;
}

.arena-you-win {
  width: 614rpx;
  height: 160rpx;
  line-height: 160rpx;
  background: #ff7474;
  font-size: 96rpx;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.arena-you-defeat {
  width: 614rpx;
  height: 160rpx;
  line-height: 160rpx;
  background: #c6c6c6;
  font-size: 96rpx;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.arena-lose-box .arena-portrait-img {
  border-color: #c6c6c6;
}

.arena-win-name {
  text-align: left;
  padding-right: 20rpx;
}

.arena-win-info-right .arena-win-name {
  text-align: right;
}

.arena-lose-box .arena-win-ques {
  background-color: #c6c6c6;
  color: #fff;
  text-align: right;
  padding-right: 20rpx;
}

.arena-win-info-right {
  right: 140rpx;
}

.arena-dianzan {
  margin-top: 20rpx;
}

.arena-active-box {
  margin-top: 80rpx;
  border-top: 2rpx solid #1adaaf;
  padding-top: 20rpx;
}

.arena-active-box view {
  font-size: 36rpx;
  color: #1adaaf;
}

.arena-share button{
  width: 100rpx;
}