/* pages/personal_center/personal_name.wxss */
.nav{
  width: 100%;
  background:#1ADAAF;
  color: #fff;
  font-size: 36rpx;
  height: 128rpx;
  line-height: 128rpx;
  text-align: center;
  position: fixed;
  top: 0;
  
}
page{
  height: 100%;
  background-image: linear-gradient(0deg, #E9EEF5 0%, #B7D0DA 100%);
}
.container{
  height: 100%;
  position: relative
}
.content{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 128rpx;
  padding-bottom: 136rpx;
}
.personal_name_ul{
  width:100%;
  height: 100%;
  padding:0 28rpx;
  padding-top: 48rpx;
  box-sizing: border-box;
}
.personal_name_ul .personal_name_li{
  width: 100%;
  background:#F8CD4B;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  position: relative;
  margin-bottom: 32rpx;
}
.personal_name_ul .personal_name_li .li_text{
  font-size: 32rpx;
}
.personal_name_ul .personal_name_li.unlock .li_text{
  color: #fff;
}
.personal_name_ul .personal_name_li.lock .li_text{
  color: #c6c6c6;
}
.personal_name_ul .personal_name_li .li_tip{
  color: #fff;
  font-size: 24rpx;
  background:#FF7474;
  padding: 0 16rpx;
  position: absolute;
  top: 0;
  left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;

}
.personal_name_ul .personal_name_li .li_right_tip{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 28rpx;
  top: 24rpx;
  
}
.personal_name_ul .personal_name_li.active .li_right_tip{
  background: url(../../images/xuanzhong.png) no-repeat;
  background-size: 100% 100%;
}
.personal_name_li .li_right_tip view{
  width: 100%;
}
.personal_name_li .li_right_tip view image{
  width: 100%;
  height: 100%;
}
.personal_name_footer{
  bottom:56rpx;
  position: absolute;
  width: 100%;
}
.return_btn,.setting_btn{
  width: 100rpx;
  height: 80rpx;
  margin-left: 24rpx;
}
.personal_name_footer .return_btn image{
  width: 100%;
  height: 100%;
}