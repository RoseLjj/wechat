/* pages/personal_center/personal_center.wxss */

page{
  height: 100%;
  background-image: linear-gradient(0deg, #E9EEF5 0%, #B7D0DA 100%);
}
.container{
  position: relative;
  height: 100%;
}
.personal_center_btnWrap{
  padding-top: 1px;
  width: 100%;

}
.personal_center_btnWrap .btn{
  font-size: 28rpx;
  border-radius: 0;
  background: #FF7474;
  display: inline-block;
  color: #fff;
  padding: 12rpx 24rpx;
  margin-left: 20rpx;
  margin-top: 32rpx;
}
.personal_info{
  width: 100%;
  text-align: center
}
.personal_headimg{
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 64rpx;
}
.personal_headimg image{
  width: 100%;
  height: 100%;
}
.personal_name_wrap{
  color: #384A46;
  font-size: 40rpx;
  margin-top: 32rpx;
}
.personal_name{
  
}
.personal_sex{
  display: inline-block;
}
.lv_wrap{
  background: #F8CD4B;
  border-radius: 100px;
  font-size: 24rpx;
  color: #fff;
  display: inline-block;
  padding: 0 30rpx;
  margin-top: 20rpx;

}
.lv_wrap text{
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 8rpx;
  color: #fff;
  
}
.lv_wrap .lv_tip{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
}
.position{
  font-size: 28rpx;
  color:#fff;
}
.personal_center_footer{
  bottom:54rpx;
  position: absolute;
  width: 100%;
}
.return_btn,.setting_btn{
  width: 100rpx;
  height: 80rpx;
  background:#1ADAAF;
  margin-left: 24rpx;
}
.return_btn image,.setting_btn image{
  width: 100%;
  height: 100%;
}
.quit_btn{
  width: 160rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background: #FF7474;
  margin-right: 24rpx;
}
/* 任务形象轮播css */
.swiper-item{
  width: 280rpx;
}
.personal_image{
  width: 100%;
}
.swiperClass {
  margin: 0;
  margin-top: 64rpx;
  height: 400rpx;
}
 
.slide-image {
  width: 100%; 
  /* height: 100%; */
  position: relative;
}
 
image.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
} 
 
image.quiet {
  transform: scale(0.8);
  transition: all 0.2s ease-in 0s;
}
