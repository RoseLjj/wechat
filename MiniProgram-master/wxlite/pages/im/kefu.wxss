/* pages/im/kefu.wxss */
page{
  height: 100%;
}
.clearfix{
    clear: both;
    overflow: hidden;
    zoom: 1;
}
.fl{
    float: left;
}
.fr{
    float: right;
}  
.container{
  height: 100%;
  width: 100%;
  background: #f6f6f6;
  position: relative;
  padding-bottom: 100rpx;
}
.box_footer{
  width: 100%;
  background: #fff;
  min-height: 80rpx;
  padding: 20rpx 0;
  position: absolute;
  bottom: 0;
  left: 0;
}
.footer_content{
  position: relative;
  width: 100%;
}
.tach_message {
    height: 100%;
    width: 100%;
    overflow-y: auto;
}
.message_li{
  padding: 20rpx 0;
  margin: 40rpx 0;
}
.user_head {
    width: 80rpx;
    height: 80rpx;
    margin: 0 20rpx;
}
.user_head>image{
  width: 100%;
  height: 100%;
}
.message_content {
    padding: 20rpx;
    background: #ddd;
    border-radius: 10rpx;
    max-width: 60%;
}
.tach_content_ul .message_li_l .user_head{
    float: left;
}
.tach_content_ul .message_li_l .message_content{
    float: left;
}
.tach_content_ul .message_li_r .user_head{
    float: right;
}
.tach_content_ul .message_li_r .message_content{
    float: right;
}
.tach_input{
  width: 500rpx;
  min-height: 80rpx;
  /* margin: 0 10rpx; */
  margin-left: 100rpx;
}
.tach_input textarea{
  width: 100%;
  background: #f5f5f5;
  min-height: 80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.send_btn{
  width: 116rpx;
  height: 80rpx;
  color:#fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  right: 20rpx;
  bottom: 0;
}
.send_btn.gre_btn{
    background: #1ADAAF;
}
.send_btn.gry_btn{
    background: #c6c6c6;
}
#emoji{
  width:80rpx;
  height:80rpx;
  text-align:center;
  line-height: 80rpx;
  margin-left: 10rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
#emoji>image{
  width:100%;
  height: 100%;
}
.kefu_title{
  width: 100%;
  height:160rpx;
  background:#fff;
  padding-top:1px; additive-symbols:  object-fit="fillCrop";
  text-align:center;
  position: relative;
}
.kefu_title_txt{
  margin-top:48rpx;
  font-size:36rpx;
  color:#1d1d1d;
}
.kefu_title_tips{
  font-size:24rpx;
  margin-top:10rpx;
  color:#acacac;
}