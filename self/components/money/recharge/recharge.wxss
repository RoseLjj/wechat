/* pages/taskRank/recharge/recharge.wxss */
@import '../../../common/common.wxss';
@import '../../../components/component.wxss';

.backgroundImage {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-image: linear-gradient(0deg, #E9EEF5 0%, #B7D0DA 100%);
}

.contentView {
  color: white;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
}

.titleView {
  margin-top: 42rpx;
  height: 96rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  line-height: 96rpx;
  align-content: center;
  background-color: #7BC6CC;
}

.recharge-list-view {
  margin-top: 26rpx;
}

.recharge-list-box {
  width: 100%;
  height: 850rpx;
}

.recharge-list-item {
  width: 100%;
  height: 156rpx;
  padding-top: 20rpx;
  margin-bottom: 20rpx;
}


.itemTopview {
  background-color: #FF7474;
  height: 40rpx;
  width: 88rpx;
  font-size: 24rpx;
  margin-left: 48rpx;
  line-height: 40rpx;
  align-content: center;
  position: absolute;
  z-index: 900;
  margin-top:-20rpx;
}

.itemCenterView {
  background-color: white;
  height: 128rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.itemLeftView {
  display: flex;
  align-items: center;
}

.yuanbaoNumber {
  margin-left: 12rpx;
  color: #1ADAAF;
}

.zuanshiNumber {
  margin-left: 12rpx;
  color: #F8CD4B;
}


.zuanshi {
  margin-left: 32rpx;
  width: 36rpx;
  height: 36rpx;
}

.itemRightView {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.buttonView {
  width: 96rpx;
  height: 96rpx;
  background-color: #1ADAAF;
  font-size: 36rpx;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.itemBottomView {
  height: 56rpx;
  position:absolute;
  z-index:900;
  margin-top:-28rpx;
  left: 60rpx;
  display: flex;
}

.zeng {
  margin-top: -6rpx;
  color: #1ADAAF;
  font-size: 24rpx;
}

.prize {
  margin-left: 16rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: #FFE888;
}

.left-content {
  color: #384A46;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
}

