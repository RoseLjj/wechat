/* 充值 */
.myMoney .recharge{
  width:60rpx;
  height: 60rpx;
}

.myMoney{
  /* width:240rpx; */
  height: 60rpx;
  background-color: #fff;
  line-height: 60rpx;
  position: relative;
  margin-left: 20rpx;
  display: inline-block;
  padding-right: 50rpx;
}

.myMoney text{
  font-size: 24rpx;
  color:#1ADAAF;
  line-height: 60rpx;
