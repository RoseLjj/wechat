/* components/record/record.wxss */
@import '/common/common.wxss';

/* 弹框 */

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-record-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-record-dialog {
  width: 710rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: #fff;
  margin-left: -355rpx;
  margin-top: -250rpx;
  padding-bottom: 40rpx;
}

.modal-record-dialog .modal-record-tips {
  width: 100%;
  text-align: center;
  margin-top: 30rpx;
  font-size: 36rpx;
}

.record-word {
  width: 100%;
  height: 112rpx;
  background: #f5f5f5;
  margin-bottom: 48rpx;
}

.record-word image {
  width: 64rpx;
  height: 80rpx;
  margin-top: 16rpx;
  margin-left: 20rpx;
}

.record-word .record-word-title {
  display: inline-block;
  line-height: 112rpx;
  vertical-align: top;
  font-size: 28rpx;
  color: #384a46;
  margin-left: 20rpx;
  font-weight: 700;
}

.modal-record-close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.modal-record-content {
  padding: 40rpx;
  max-height: 300rpx;
  overflow: auto;
  margin-bottom: 50rpx;
}

.modal-record-title {
  text-align: center;
  margin-top: 120rpx;
  font-size: 32rpx;
  color: #384a46;
  padding: 0 40rpx;
}

.record-audio {
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 200rpx;
  position: relative;
  margin-bottom: 48rpx;
}

.record-audio image {
  width: 52rpx;
  height: 52rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}

.record-audio .record-audio-title {
  position: absolute;
  right: 20rpx;
  top: 0;
  height: 100%;
  line-height: 76rpx;
  font-size: 28rpx;
  color: #1adaaf;
}

.modal-record-footer {
  text-align: right;
}

.btn-record-confirm {
  width: 144rpx;
  text-align: center;
  background: #1adaaf;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 32rpx;
  color: #fff;
  display: inline-block;
  margin-right: 40rpx;
}

audio{
  height: 0;
  display: none;
}