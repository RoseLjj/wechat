.chat-input {
	width: 570rpx;
	height: 80rpx;
	border-radius: 10rpx;
	/* border: 2rpx solid #d4d4d4; */
	background-color: #f5f5f5;
	margin-top: 16rpx;
  margin-left: 20rpx;
	text-align: left;
	/* padding: 14rpx 0 14rpx 20rpx; */
	float: left;
}
.chat-send {
	width: 116rpx;
	height: 80rpx;
	float: left;
	margin: 16rpx 12rpx 16rpx 20rpx;
  background-color: #c6c6c6;
  color: white;
  text-align: center;
  font-size: 32rpx;
  line-height: 80rpx;
}


.nochat {
    width: 100%;
    height: 100%;
    text-align: center;
    overflow-x: hidden;
    overflow-y: auto;
    background-color: #F5F5F5;
}
.noChat-img {
	width: 160rpx;
	height: 90rpx;
	margin: 0 auto;
}
.noChat-img2 {
	width: 160rpx;
	height: 90rpx;
}
.noChat-text {
	color: #b7b7b7;
	font-size: 24rpx;
	height: 40rpx;
	margin-top: -40rpx;
	display: block;
}

.pri-box {
	width: 100%;
    padding-bottom: 40rpx;
    position: relative;
}
.pri-chat {
	width: 100%;
	position: fixed;
	bottom: 0;
	z-index: 5;
	transform: translateY(100%);
}
.priTitle {
	height: 92rpx;
	line-height: 92rpx;
	border-bottom: 1px solid #ccc;
	padding: 0 30rpx;
	font-size: 28rpx;
  font-family: PingFangSC-Medium;
	color: #1ADAAF;
	position: relative;
  background-color: #666666;
}
.closePri {
	width: 64rpx;
	height: 64rpx;
	position: absolute;
	/* padding: 10rpx; */
	top: 16rpx;
	right: 24rpx;
}
.priMain {
	overflow-y: scroll;
	overflow-x: hidden;
  background-color: #f5f5f5;
}
.priChat-item {
	padding: 0 20rpx;
	clear: both;
	overflow: hidden;
}
.praChat-name {
	height: 50rpx;
	line-height: 50rpx;
	font-size: 24rpx;
	color: #808080;
}
.praChat-content {
	width: 500rpx;
	padding: 20rpx;
	font-size: 26rpx;
	line-height: 36rpx;
	border-radius: 10rpx;
}
.praChat-other {
	background-color: #fff;
	color: #333;
}
.praChat-self {
	background-color: #2d96ea;
	color: #fff;
}

.unchat {
	height: 70rpx;
	line-height: 70rpx;
	width: 100%;
	text-align: center;
	background-color: #e6e6e6;
	color: #333;
	font-size: 22rpx;
	position: fixed;
	bottom: 100rpx;
	z-index: 10;
}