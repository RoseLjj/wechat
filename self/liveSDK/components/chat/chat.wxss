/* components/chant/chant.wxss */
.tright {
	text-align: right;
}
.right {
	float: right;
}
.chatMain {
    width: 100%;
    height: 100%;
}
.chat-info {
    width: 100%;
    padding-bottom: 60rpx;
    position: relative;
    background-color: #F5F5F5;
}
.chat-item {
	padding: 0 20rpx 0 40rpx;
	height: auto;
	clear: both;
}

.topBorder {
	height: 36rpx;
	border-left: 1px solid #c6c6c6;
}
.midBorder {
	height: 36rpx;
	line-height: 36rpx;
	padding-left: 34rpx;
	position: relative;
}
.item-icon {
	width: 36rpx;
	height: 36rpx;
	position: absolute;
	top: 0;
	left: -17rpx;
}
.item-user {
	font-size: 24rpx;
	float: left;
  font-family: PingFangSC-Regular;
}
.others {
	color: #1ADAAF;
}
.sysme {
	color: #F8CD4B;
}
.otherto {
	color: #1ADAAF;
	text-decoration: underline;
}

.organizer {
  color: #F8CD4B;
}

.item-time {
	font-size: 26rpx;
	color: #b3b3b3;
	float: right;
}
.botBorder {
	line-height: 44rpx;
	padding-left: 34rpx;
	border-left: 1px solid #c6c6c6;
	float: left;
	font-size: 28rpx;
  font-family: PingFangSC-Regular;
	word-break: break-all;
	text-align: left;
	color: #292929;
}




.chat-bot {
	width: 100%;
	height: 112rpx;
	/* border-top: 1rpx solid #d7d7d7; */
	background-color: white;
	position: fixed;
	bottom: 0;
	z-index: 10;
	margin: 0;
	padding: 0;
	overflow: hidden;
}
