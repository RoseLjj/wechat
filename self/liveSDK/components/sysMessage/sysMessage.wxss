/* components/sysMessage/sysMessage.wxss */
.sysMessage {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #ebebeb;
    border: none;
    position: absolute;
    display: flex;
    z-index: 999;
    top: 0;
    left: 0;
}
.sys-image {
    width: 36rpx;
    height: 36rpx;
    padding: 16rpx 10rpx 18rpx 10rpx;
    border-right: 1px solid #c8c8c8;
    background-color: #ebebeb;
    z-index: 2;
}
.sys-desc {
    flex: 1;
    width: auto;
    line-height: 70rpx;
    color: #ef5045;
    font-size: 28rpx;
}
.sys-message {
    line-height: 70rpx;
    transform: translateX(100%);
}